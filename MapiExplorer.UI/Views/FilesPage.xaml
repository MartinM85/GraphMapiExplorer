<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MapiExplorer.UI.Views.FilesPage">
    <VerticalStackLayout Margin="5">
        <Picker Title="Select items source" ItemsSource="{Binding ItemsSource}" SelectedItem="{Binding SelectedItemsSource}" ItemDisplayBinding="{Binding Name}" />
        <CollectionView ItemsSource="{Binding DriveItems}" SelectionMode="Single" SelectedItem="{Binding SelectedDriveItem}"
                    SelectionChangedCommand="{Binding GoToDetailsCommand}"
                    ItemTemplate="{StaticResource DriveItemTemplateSelector}">
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>